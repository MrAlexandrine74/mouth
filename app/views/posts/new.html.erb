<h1>New post</h1>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
		<%= f.label :permalink %><br />
    <%= f.text_field :permalink %>
  </p>
  <p>
		<%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
		<%= f.label :excerpt %><br />
    <%= f.text_area :excerpt %>
  </p>
  <p>
		<%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
		<%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p>
		<%= f.label :published_at %><br />
    <%= f.datetime_select :published_at %>
  </p>
  <p>
		<%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>