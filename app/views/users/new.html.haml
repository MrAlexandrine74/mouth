= error_messages_for :user
- form_for :user, :url => users_path do |make|
  %p
    %label{:for => "login"} Login
    = make.text_field :login
  %p
    %label{:for => "email"} Email
    = make.text_field :email
  %p
    %label{:for => "password"} Password
    = make.text_field :password
  %p
    %label{:for => "password_confirmation"} Confirm your password
    = make.text_field :password_confirmation
  %p= submit_tag "Sign up"
